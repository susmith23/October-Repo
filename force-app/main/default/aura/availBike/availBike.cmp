<aura:component controller="AvailableHubApex" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="recordId" type="String" />
    <aura:attribute name="bikeList" type="LIST" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:card>
        
        <lightning:accordion aura:id="accordion" activeSectionName="B">
            <aura:iteration items="{!v.bikeList}" var="bike">
                <lightning:accordionSection name="{!bike.Name}" label="{!bike.Name}">
                    <aura:set attribute="body">
                        <aura:iteration items="{!bike.Bookings__r.records}" var="booking">
                            <p>{!booking.Name},{!booking.Booking_Time__c},{!booking.Distance_KM_s__c},{!booking.Customer__r.Name},{!booking.Customer__r.Status__c}</p>
                        </aura:iteration>
                        
                    </aura:set>
                </lightning:accordionSection>
            </aura:iteration>
       
    </lightning:accordion>             
    </lightning:card>   
</aura:component>